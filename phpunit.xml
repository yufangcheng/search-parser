<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
         verbose="true"
>
    <testsuite name="SearchQueryParser Test Suite">
        <directory suffix="Test.php">Tests/SearchParser</directory>
        <exclude>Tests/SearchParser/Analyzers/AnalyzeExceptionsTest.php</exclude>
    </testsuite>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">SearchQuery</directory>
            <directory suffix=".php">SearchParser</directory>
        </whitelist>
    </filter>
</phpunit>